<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_screen"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <TextView
        android:id="@+id/title_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:text="Title" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <!-- VERY IMPORTANT: android:layout_weight="1" so when
             soft keyboard appears, scrollview adjuts to available space.
        -->

        <LinearLayout
            android:id="@+id/conversation"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dip"
        android:background="@color/grey">

        <EditText
            android:id="@+id/input"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:paddingLeft="4dp"
            android:hint="Type text here"
            android:background="@color/grey"
            android:textColor="@color/orange"
            android:inputType="textNoSuggestions|textVisiblePassword"
            android:text="" />

        <!-- without: android:inputType is multi-line by default (CR instead of DONE softkey)
             if we don't want to show suggetions we HAVE to: textNoSuggestions|textVisiblePassword  -->

        <Button
            android:id="@+id/mybutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addText"
            android:text="Send"/>

    </LinearLayout>

</LinearLayout>